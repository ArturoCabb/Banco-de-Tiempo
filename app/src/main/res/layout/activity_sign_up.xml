<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imgIcono4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/etCreaUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/imgIcono4"
        app:layout_constraintStart_toStartOf="@+id/imgIcono4"
        app:layout_constraintTop_toBottomOf="@+id/imgIcono4" />

    <EditText
        android:id="@+id/etCreaContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etCreaUsuario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etCreaUsuario"
        app:layout_constraintTop_toBottomOf="@+id/etCreaUsuario" />

    <EditText
        android:id="@+id/etConfirmaContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/etCreaContrasena"
        app:layout_constraintStart_toStartOf="@+id/etCreaContrasena"
        app:layout_constraintTop_toBottomOf="@+id/etCreaContrasena" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Crear Cuenta"
        app:layout_constraintEnd_toEndOf="@+id/etConfirmaContrasena"
        app:layout_constraintStart_toStartOf="@+id/etConfirmaContrasena"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmaContrasena" />
</androidx.constraintlayout.widget.ConstraintLayout>