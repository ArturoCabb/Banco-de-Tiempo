<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContratarActivity">

    <TextView
        android:id="@+id/tvNameActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Trabajo"
        app:layout_constraintStart_toStartOf="@+id/imgActividad"
        app:layout_constraintTop_toBottomOf="@+id/imgActividad" />

    <TextView
        android:id="@+id/tvDescripcionTrabajo"
        android:layout_width="376dp"
        android:layout_height="136dp"
        android:layout_marginTop="44dp"
        android:text="Descripcion de trabajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnContratar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Contratar"
        app:layout_constraintEnd_toEndOf="@+id/tvDescripcionTrabajo"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescripcionTrabajo" />

    <TextView
        android:id="@+id/tvLugarDeTrabajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Lugar"
        app:layout_constraintStart_toStartOf="@+id/tvNombreTrabajador"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreTrabajador" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="CheckBox"
        app:layout_constraintStart_toEndOf="@+id/tvNombreTrabajador"
        app:layout_constraintTop_toTopOf="@+id/tvNombreTrabajador" />

    <TextView
        android:id="@+id/tvNombreTrabajador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Realiza"
        app:layout_constraintStart_toStartOf="@+id/tvNameActividad"
        app:layout_constraintTop_toBottomOf="@+id/tvNameActividad" />

    <ImageView
        android:id="@+id/imgActividad"
        android:layout_width="366dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/tvNameActividad"
        app:layout_constraintTop_toTopOf="@+id/tvNameActividad" />

    <Button
        android:id="@+id/button2"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        app:layout_constraintStart_toEndOf="@+id/tvLugarDeTrabajo"
        app:layout_constraintTop_toTopOf="@+id/tvLugarDeTrabajo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="fecha"
        app:layout_constraintStart_toStartOf="@+id/tvLugarDeTrabajo"
        app:layout_constraintTop_toBottomOf="@+id/tvLugarDeTrabajo" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:ems="10"
        android:inputType="date"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>