<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EjecucionTrabajoActivity">

    <ImageButton
        android:id="@+id/btnCerrarEjecucion"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="cerrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvActividadEjecucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Tarea en ejecucion"

        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btnCerrarEjecucion"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgTrabajoEjecucion"
        android:layout_width="127dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNombrePersonaEjecucion"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Nombre de persona"
        app:layout_constraintStart_toStartOf="@+id/imgTrabajoEjecucion"
        app:layout_constraintTop_toBottomOf="@+id/imgTrabajoEjecucion" />

    <TextView
        android:id="@+id/tvHoraInicioEjecucion"
        android:layout_width="168dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:text="HORA INICIO"
        app:layout_constraintStart_toStartOf="@+id/tvNombrePersonaEjecucion"
        app:layout_constraintTop_toBottomOf="@+id/tvNombrePersonaEjecucion" />

    <TextView
        android:id="@+id/tvHoraFinEjecucion"
        android:layout_width="168dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:text="HORA FIN: "
        app:layout_constraintStart_toStartOf="@+id/tvHoraInicioEjecucion"
        app:layout_constraintTop_toBottomOf="@+id/tvHoraInicioEjecucion" />

    <Button
        android:id="@+id/btnReportarTareaEjecucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:onClick="reportar"
        android:text="Reportar"
        android:background="@drawable/secondary_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHoraFinEjecucion" />

    <Button
        android:id="@+id/btTerminarEjecucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_button"
        android:onClick="terminar"
        android:text="Terminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toEndOf="@+id/btnReportarTareaEjecucion"
        app:layout_constraintTop_toTopOf="@+id/btnReportarTareaEjecucion" />

</androidx.constraintlayout.widget.ConstraintLayout>